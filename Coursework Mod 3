-- which scripts has Dr. Garcia written?
SELECT distinct med.medication_name, scripts.doctor_name 
FROM medication AS med 
LEFT JOIN prescriptions AS scripts
ON med.person_ID=scripts.person_ID
WHERE doctor_name = "Dr. Garcia";

-- When were all the Zonkify last filled?
SELECT scripts.date_filled, scripts.geo, med.medication_name 
FROM prescriptions AS scripts INNER JOIN medication AS med 
ON med.person_ID=scripts.person_ID
WHERE med.medication_name = "Zonkify";



-- Create the 'customers' table
CREATE TABLE customers (
    customer_id INTEGER,
    customer_name TEXT,
    contact_email TEXT,
    contact_phone TEXT,
    billing_address TEXT,
    shipping_address TEXT
);
    
-- Create the 'shipments' table     
CREATE TABLE shipments (
    sender_id INTEGER,
    shipment_id INTEGER,
    package_description TEXT,
    weight_kg REAL,
    shipping_method TEXT,
    shipping_date DATE,
    delivery_date DATE,
    status TEXT
);

