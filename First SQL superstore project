#Query all items in the table alphabetically
SELECT item_name
FROM superstore
ORDER BY item_name;

# Shows item and price of all items in dataset ordered from highest to lowest price
SELECT item_name, price
FROM superstore
ORDER BY price desc;

# Shows the item, price and rating of items with a rating higher than 4 stars
SELECT item_name, price, average_rating
FROM superstore
WHERE average_rating > 4.0
ORDER BY item_name desc;

# Shows how many items(rows) have a rating higher than 4 stars
SELECT count(item_name)
FROM superstore
WHERE average_rating > 4.0;

# Shows the item, price of items belonging to the Kitchen Supplies category
SELECT item_name, price
FROM superstore
WHERE category = 'Kitchen Supplies';

# Shows table's most expensive item, avg price of all items, and cheapest item in the Kitchen Supplies category
SELECT max(price), avg(price), min(price)
from superstore
WHERE category = 'Kitchen Supplies';

# Shows how many air purifiers are in stock
SELECT item_name, stock_quantity
FROM superstore
WHERE item_name = 'Air Purifier';

# Shows all items in Furnishings and their available quantities in alphabetical order
SELECT item_name, stock_quantity
FROM superstore
WHERE category = 'Furnishings'
ORDER BY item_name;
